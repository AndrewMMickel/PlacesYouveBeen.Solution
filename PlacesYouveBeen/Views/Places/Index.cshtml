@{
    Layout = "_Layout";
}
@using PlacesYouveBeen.Models
<h1>Places You've Been</h1>
@if (Model.Count == 0)
{
    <p>There are no places in the list.</p>
}
<ul>
    @foreach (Place place in Model)
    {
        <li><a href="/places/@place.Id">@place._cityName</a></li>
    }
</ul>

<div class="footer">
    <a href="/places/new">Add another place</a>
</div>